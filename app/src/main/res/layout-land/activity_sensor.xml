<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/Theme.AndroidLabs.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/sensors_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/Theme.AndroidLabs.PopupOverlay"
            app:title="Sensors" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <TextView
            android:id="@+id/x_accel_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accelerometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/x_accel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_accelerometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/y_accel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/y_accelerometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/z_accel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/z_accelerometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/x_magnet_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/magnetometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/x_magnet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_magnetometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/y_magnet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/y_magnetometer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/z_magnet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/z_magnetometer"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>